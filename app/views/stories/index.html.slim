=r ux.container
  =r ux.row
    =r ux.column width: 16
      =r ux.h2 'center aligned !font-mono'
        | Stories
        =r ux.label text: @total_stories, class: 'circular !bg-black !text-white'

      =r ux.div 'text-center'
        = paginate @stories

      - @stories.each do |story|
        = render 'story', story: story

      =r ux.div 'text-center'
        = paginate @stories
