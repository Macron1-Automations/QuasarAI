=r ux.container
  =r ux.row
    =r ux.column width: 16
      =r ux.segment 'basic'
        =r ux.text class: 'text-center', text: 'ðŸ”’ This page is protected by devise. You can only see it if you are logged in & authorized. ðŸ”’'

      =r ux.divider

      =r ux.h2 'center aligned !font-mono'
        | Tweets
        =r ux.label text: @total_tweets, class: 'circular !bg-black !text-white'

      =r ux.div 'text-center'
        = paginate @tweets

      - @tweets.each do |tweet|
        =r ux.segment '!mt-10 !mb-20 !bg-zinc-100 !border-4 !border-zinc-200 !shadow-xl !px-10 !py-10 overflow-x-hidden'
          =r ux.code
            =r ux.div 'text-right'
              = link_to 'Show Discussion', discussion_path(tweet.discussion)

            =r ux.strong 'text-blue-800 !mb-80'
              = "Tag: #{tweet.discussion.story.tag.name}"
            =r ux.div 'mt-5 mb-5'
              - if tweet.invalid_json
                =r ux.label text: "Invalid JSON", class: 'red'


            =r ux.divider
            =r ux.div 'mt-0'
              =r ux.code
                - unless tweet.invalid_json
                  = highlight_hashtags(JSON.parse(tweet.stem)['tweet'])

      =r ux.div 'text-center'
        = paginate @tweets
